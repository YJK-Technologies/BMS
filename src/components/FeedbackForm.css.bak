/* Mobile Responsive Styles */
@media (max-width: 480px) {
   .progress-indicator{
    display: flex;
    justify-content: center;
   }
    
    
    
    .feedback-form {
        padding: 15px; 
        margin-top: 18px;
        margin-left: 20px;
        margin-right: 20px;
    }

    .button-group {
        flex-direction: row;
        display: flex;
        align-items:center;
        justify-content: space-between;  /* Stack buttons on small screens */
    }

    .btn-secondary,
    .submit-button {
        width: 100px; /* Make buttons full width */
        margin-right: 0; /* Remove right margin */
        margin-bottom: 10px;
        display: flex;
        align-items:center;
        justify-content: center; /* Add space between stacked buttons */
    }

    .options-container {
        gap: 15px; /* Increased gap between options for better touch targets */
    }

    .option-label {
        padding: 12px; /* Increased padding for better touchability */
    }

    h5 {
        font-size: 16px; /* Slightly smaller heading on mobile */
    }
}



